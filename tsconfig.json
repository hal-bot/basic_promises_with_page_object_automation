{
  "compileOnSave": false,

  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,

    "outDir": "typeScript",
    "typeRoots": ["../node_modules/@types"],
    "types": ["node","cucumber"]
  },
  "exclude": [
    "node_modules",
    "typescript",
    "*.js"
  ]
}
